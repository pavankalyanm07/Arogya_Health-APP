<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.patient.PatientHomeScreen"
    android:backgroundTint="@color/white"
    android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:background="@color/accent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:text="@string/app_name"
                    android:layout_margin="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                    android:id="@+id/btn_account"
                    android:background="@drawable/va_account_icon"
                    android:layout_width="40dp"
                    android:layout_margin="10dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_log_out"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <Button
                    android:id="@+id/btn_log_out"
                    android:background="@drawable/va_logout_icon"
                    android:layout_width="40dp"
                    android:layout_margin="10dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_doctors_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            tools:listitem="@layout/doctor_list_view"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_click_account_button"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:padding="47dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="40dp"
            android:backgroundTint="@color/theme"
            android:gravity="center"
            android:textSize="33sp"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">
                <TextView
                    android:text="Click on account Icon to check your appointments"
                    android:layout_width="match_parent"
                    android:layout_margin="17dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="33sp"
                    app:layout_constraintTop_toBottomOf="@id/app_bar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

